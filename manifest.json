{
  "manifest_version": 3,
  "name": "GitHub Commit Visualizer",
  "version": "1.0",
  "description": "Visualize commit types on GitHub with icons.",
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "1050": "icons/icon.png"
  },
  "permissions": [
    "activeTab"
  ]
}
